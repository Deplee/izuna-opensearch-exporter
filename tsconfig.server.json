{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "outDir": "./dist",
      "module": "CommonJS",
      "target": "ES2020",
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": [
      "src/server/**/*.ts",
      "src/utils/**/*.ts",
      "src/api/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
    